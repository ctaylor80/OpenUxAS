<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE MDM SYSTEM 'MDM.DTD'>

<!--
        <h2>Introduction</h2>
        TTCP message definitions. Defines data relevant for ttcp project integration.
		
		<h2>Changes</h2>
        <h3>1 Nov 2017</h3>
        <ul>
            <li>Initial version</li>
        </ul>

-->

<MDM>
    <SeriesName>TTCP</SeriesName>
    <Namespace>afrl/ttcp</Namespace>
    <Version>2</Version>
    <EnumList>
        <!-- Affiliation classification of track. -->
        <Enum Name="Affiliation">
            <!-- None -->
            <Entry Name="None" Value="0"/>
            <!-- Unknown -->
            <Entry Name="Unknown" Value="1"/>
            <!-- Friend -->
            <Entry Name="Friend" Value="2"/>
			<!-- Neutral -->
            <Entry Name="Neutral" Value="3"/>
            <!-- Hostile -->
            <Entry Name="Hostile" Value="4"/>
            <!-- Pending -->
            <Entry Name="Pending" Value="5"/>
			<!-- AssumedFriend -->
            <Entry Name="AssumedFriend" Value="6"/>
            <!-- Suspect -->
            <Entry Name="Suspect" Value="7"/>
            <!-- Joker -->
            <Entry Name="Joker" Value="8"/>
			<!-- Faker -->
            <Entry Name="Faker" Value="9"/>
        </Enum>
		<!-- Battle dimensions classification of track. -->
        <Enum Name="Dimension">
            <!-- Air -->
            <Entry Name="Air" Value="0"/>
            <!-- Ground -->
            <Entry Name="Ground" Value="1"/>
            <!-- SeaSurface -->
            <Entry Name="SeaSurface" Value="2"/>
			<!-- SeaSubSurface -->
            <Entry Name="SeaSubSurface" Value="3"/>
            <!-- Other -->
            <Entry Name="Other" Value="4"/>
        </Enum>
		<!-- Movement type of the track. -->
        <Enum Name="MovementTypeDescription">
            <!-- Undefined -->
            <Entry Name="Undefined" Value="0"/>
            <!-- Stationary -->
            <Entry Name="Stationary" Value="1"/>
            <!-- NonStationary -->
            <Entry Name="NonStationary" Value="2"/>
        </Enum>
		<!-- Fusion tracks -->
        <Enum Name="TrackActionOptions">
            <!-- track of interest created -->
            <Entry Name="Created" Value="0"/>
            <!-- track of interest destroyed -->
            <Entry Name="Destroyed" Value="1"/>
            <!-- track of interest modified -->
            <Entry Name="Modified" Value="2"/>
        </Enum>
    </EnumList>

    <StructList>	
        <!-- Indicates a track configuration -->
        <Struct Name="TrackConfiguration" Extends="EntityConfiguration" Series="CMASI" >
		
        </Struct>
		
        <!-- Indicates a track state -->
        <Struct Name="TrackState" Extends="EntityState" Series="CMASI" >
			<!-- cotType -->
			<Field Name="CotType" Type="string"/>
			<!-- affiliation of the idientified track -->
			<Field Name="TrackAffiliation" Type="Affiliation" Default="None" />
			<!-- battle dimension of track -->
			<Field Name="BattleDimension" Type="Dimension" Default="Air" />
			<!-- movement type of track -->
			<Field Name="MovementType" Type="MovementTypeDescription" Default="Undefined" />
        </Struct>
		
		<Struct Name="TrackChange">
			<!-- track identifier -->
			<Field Name="TrackId" Type="int64" />
			<!-- track action -->
			<Field Name="TrackChange" Type="TrackActionOptions" />
		</Struct>
		
		<Struct Name="PayloadDropTask" Extends="Task" Series="CMASI">
		    <Field Name="DropLocation" Type="Location3D" Series="CMASI" Default="null" Optional="false" />
		    <Field Name="BDALocation" Type="Location3D" Series="CMASI" Default="null" Optional="false" />
		</Struct>
	
        
 </StructList>
</MDM>
